[
  {
    "id": "rival_pack_saga_start",
    "title": "Strangers at the Border",
    "text": "Scout {wolf.name} reports strange scents and tracks near the territory's eastern border. The signs suggest a large pack moving through the area, potentially seeking new territory.",
    "condition": {
      "all": [
        {
          "field": "wolf.role",
          "op": "in",
          "value": ["hunter", "beta", "alpha"]
        },
        { "field": "pack.wolves.length", "op": ">=", "value": 5 },
        { "field": "pack.food", "op": ">", "value": 3 }
      ]
    },
    "actions": [
      {
        "type": "schedule_consequence",
        "consequenceId": "rival_pack_encounter",
        "daysDelay": 5
      },
      {
        "type": "modify_stat",
        "target": "pack",
        "stat": "territory.dangerLevel",
        "delta": 1
      },
      {
        "type": "log",
        "text": "{wolf.name} discovered signs of a potentially hostile pack approaching the territory."
      }
    ],
    "weight": 4,
    "tags": ["story_chain", "rival_pack", "tension"],
    "storyChainId": "rival_pack_saga"
  },
  {
